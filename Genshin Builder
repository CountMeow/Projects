def get_Yelan(name):
    if name == "Yelan":
        print("\n You have chosen Yelan!\n")
    while True:
        info = str(input("\nWhat would you like to know about Yelan? (Type Weapon, Artifact, or Role): ").lower().title())
        if info == "Weapon":
            print("\nYelan's signature weapon is Aqua Simulacra(5-Star)!\nHer second best weapon is Favonius Warbow(4-Star!)\nHer best early game weapon is The Recurve Bow(3-Star)!\n")
        elif info == "Artifact":
            print("Yelan's best artifact set late game is the Emblem of Severed Fate!\nUse an hp or er hourglass, a hydro damage bonus cup, and a crit hat!\nHer best early-game artifact set is The Elite!\n")
        elif info == "Role":
            print("Yelan is a 5-Star Hydro Bro who's ultimate lends a hand in support, making her a great Sub-DPS with DPS capabilities! Balance her hp and er, as well as her crit ratio to get the full benefit!")
        answer = str(input("Would you like to learn more about this chara? (Y/N): ").lower().title())
        if answer == "N":
            main()
            break
        else:
            get_Yelan
    
main()



